{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clinical NER Layout Schema",
  "description": "Input and output schema for the clinical NER annotation layout",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "description": "Task input data",
      "properties": {
        "text": {
          "type": "string",
          "description": "The clinical text to annotate"
        },
        "documentId": {
          "type": "string",
          "description": "Optional document identifier"
        },
        "metadata": {
          "type": "object",
          "description": "Optional document metadata"
        }
      },
      "required": ["text"]
    },
    "output": {
      "type": "object",
      "description": "Annotation output data",
      "properties": {
        "entities": {
          "type": "array",
          "description": "Annotated entities",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique entity identifier"
              },
              "type": {
                "type": "string",
                "enum": ["medication", "condition", "procedure", "anatomy", "measurement"],
                "description": "Entity type"
              },
              "start": {
                "type": "integer",
                "minimum": 0,
                "description": "Start character offset"
              },
              "end": {
                "type": "integer",
                "minimum": 0,
                "description": "End character offset"
              },
              "text": {
                "type": "string",
                "description": "The annotated text span"
              }
            },
            "required": ["id", "type", "start", "end", "text"]
          }
        },
        "notes": {
          "type": "string",
          "description": "Optional annotator notes"
        }
      },
      "required": ["entities"]
    }
  },
  "required": ["input", "output"]
}
